<gcse:search></gcse:search>




    <div class="row justify-content-center">

      <p class="text-muted">A Prototype by Eddie Paulino</p>
    </div>

    <hr class="my-4">

    <!--List of topics-->
    <div class="row justify-content-center">
      <h3>Browse Topics</h3>
    </div>


    <div class="row justify-content-center">


      <div class="col-md-2">
        <div class="card border-primary mb-3" style="max-width: 20rem;">
          <h3 class="card-header">Transportation</h3>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Vertical Curve Design</li>
            <li class="list-group-item">Horizontal Curve Design</li>
            <li class="list-group-item">Traffic Signal Timing</li>
          </ul>
        </div>

      </div>

      <div class="col-md-2">
        <div class="card border-primary mb-3" style="max-width: 20rem;">
          <div class="card-header">Construction</div>
          <div class="card-body">
            <h4 class="card-title">Estimating</h4>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          </div>
        </div>

      </div>
    </div>

    <!--List of Topics-->
    <h1>
      All topics
    </h1>

    <a href="/topics/new">
      Add a new topic
    </a>

    <hr>

    <table class="table">
      <tr>

        <th>
          Title
        </th>

        <th>
        </th>
      </tr>

      <% @topic.each do |topic| %>
        <tr>

          <td>
            <%= topic.title %>
          </td>

          <td>
            <a href="/topics/<%= topic.id %>" class="btn btn-primary">
              Show topic
            </a>
          </td>
        </tr>
      <% end %>
    </table>

  </body>


</html>
