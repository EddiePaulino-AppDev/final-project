<%= javascript_include_tag Ckeditor.cdn_url %>
<!-- Validation failure messages -->
<% if @text_component.present? %>
  <% if @text_component.errors.any? %>
    <% @text_component.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>
<div class="container">
<h1>
  Add a new text component
</h1>

<hr>


<form action="/create_text_component" method="post">
  <!-- Label and input for header -->
  <div class="form-group">
    <label for="header">
      Header
    </label>

    <input type="text" id="header" name="header" class="form-control" value="<%= @text_component.try(:header) %>">
  </div>
  
  <div class="form-group">
    <label for="content">
      Content
    </label>

    <textarea id="content" name="content" class="ckeditor" rows="10" value="<%= sanitize @text_component.try(:content) %>"></textarea>
  </div>
  
  <!--input for guide_id -->
  <div class="form-group">

    <input type="hidden" id="guide_id" name="guide_id" class="form-control" value="<%= params.fetch("guide_id") %>">
  </div>
    <!-- input for tab_id -->
  <div class="form-group">
    <input type="hidden" id="tab_id" name="tab_id" class="form-control" value="<%= params.fetch("tab_id") %>">
  </div>

  <button type="submit" class="btn btn-block btn-outline-secondary">
   Add Text Component
  </button>
</form>

<hr>

<a href="/guides/<%= params.fetch("guide_id")%>">
  Go back
</a>
</div>