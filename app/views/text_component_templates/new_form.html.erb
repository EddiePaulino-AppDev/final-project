<script src="https://cdn.ckeditor.com/ckeditor5/11.1.1/classic/ckeditor.js"></script>
<!-- Validation failure messages -->
<% if @text_component.present? %>
  <% if @text_component.errors.any? %>
    <% @text_component.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new text component
</h1>

<hr>

<form action="/create_text_component" method="post">
  <!-- input for section_id -->
  <div class="form-group">
    <input type="hidden" id="section_id" name="section_id" class="form-control" value="<%= params.fetch("section_id") %>">
  </div>

  <!-- Label and input for header -->
  <div class="form-group">
    <label for="header">
      Header
    </label>

    <input type="text" id="header" name="header" class="form-control" value="<%= @text_component.try(:header) %>">

  </div>
  <div class="form-group">
    <label for="content">
      Body
    </label>
    <textarea name="content" id="editor"></textarea>
    <script>
      ClassicEditor
      	.create( document.querySelector( '#editor' ) )
      	.then( editor => {
      		console.log( editor );
      	} )
      	.catch( error => {
      		console.error( error );
      	} );
    </script>

  </div>
  <button class="btn btn-block btn-outline-secondary">
    Create text component
  </button>
</form>

<hr>

<a href="/text_components">
  Go back
</a>
