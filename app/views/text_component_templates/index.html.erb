<h1>
  All text components
</h1>

<a href="/text_components/new">
  Add a new text component
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Section
    </th>

    <th>
      Header
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @text_components.each do |text_component| %>
  <tr>
    <td>
      <%= text_component.id %>
    </td>

    <td>
      <%= text_component.section_id %>
    </td>

    <td>
      <%= text_component.header %>
    </td>

    <td>
      <%= time_ago_in_words(text_component.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(text_component.updated_at) %> ago
    </td>

    <td>
      <a href="/text_components/<%= text_component.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
