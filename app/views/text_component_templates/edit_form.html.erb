<!-- Validation failure messages -->
<% if @text_component.errors.any? %>
  <% @text_component.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit text component #<%= @text_component.id %>
</h1>

<hr>
<div class="container">
<form action="/update_text_component/<%= @text_component.id %>" method="post">
  <!--input for guide_id -->
  <div class="form-group">

    <input type="hidden" id="guide_id" name="guide_id" class="form-control" value="<%= params.fetch("guide_id") %>">
  </div>
    <!-- input for tab_id -->
  <div class="form-group">
    <input type="hidden" id="tab_id" name="tab_id" class="form-control" value="<%= params.fetch("tab_id") %>">
  </div>


  <!-- Label and input for header -->
  <div class="form-group">
    <label for="header">
      Header
    </label>

    <input type="text" id="header" name="header" class="form-control" value="<%= @text_component.try(:header) %>">
  </div>
  
  <div class="form-group">
    <label for="content">
      Content
    </label>

    <textarea id="content" name="content" class="ckeditor" rows="10" value="<%= @text_component.try(:content) %>"></textarea>
  </div>
  
  <button class="btn btn-block btn-outline-secondary">
    Update text component
  </button>
</form>
</div>

<hr>
<a href="/delete_text_component/<%= @text_component.id %>" data-confirm="Are you sure?">
  Delete text component
</a>
<div></div>
<a href="/guides/<%= params.fetch("guide_id") %>">
  Go back
</a>
