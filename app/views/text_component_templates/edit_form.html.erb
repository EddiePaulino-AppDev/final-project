<%= javascript_include_tag Ckeditor.cdn_url %>
<!-- Validation failure messages -->
<% if @text_component.errors.any? %>
  <% @text_component.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h3>
  Edit Content for the "<%= Guide.find_by(:id => params.fetch("guide_id")).title %>" guide, "<%= Tab.find_by(:id => params.fetch("tab_id")).title %>" tab.
</h3>

<hr>
<div class="container">
<form action="/update_text_component/<%= @text_component.id %>" method="post" >
  <!--input for guide_id -->
  <div class="form-group">

    <input type="hidden" id="guide_id" name="guide_id" class="form-control" value="<%= params.fetch("guide_id") %>">
  </div>
    <!-- input for tab_id -->
  <div class="form-group">
    <input type="hidden" id="tab_id" name="tab_id" class="form-control" value="<%= params.fetch("tab_id") %>">
  </div>

  <div class="form-group">
    <label for="content">
      Content
    </label>

    <textarea id="content" name="content" class="ckeditor" rows="10"><%= raw @text_component.content %></textarea>
  </div>
  
  <button class="btn btn-block btn-outline-secondary">
    Update text component
  </button>
</form>
</div>

<hr>

<a href="/guides/<%= params.fetch("guide_id") %>">
  Go back
</a>
