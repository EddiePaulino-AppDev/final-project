<!-- Validation failure messages -->
<% if @discussion.present? %>
  <% if @discussion.errors.any? %>
    <% @discussion.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new discussion
</h1>

<hr>

<form action="/create_discussion" method="post">
  <!-- Label and input for tab_id -->
  <div class="form-group">
    <label for="tab_id">
      Tab
    </label>

    <input type="text" id="tab_id" name="tab_id" class="form-control" value="<%= @discussion.try(:tab_id) %>">
  </div>

  <!-- Label and input for guide_id -->
  <div class="form-group">
    <label for="guide_id">
      Guide
    </label>

    <input type="text" id="guide_id" name="guide_id" class="form-control" value="<%= @discussion.try(:guide_id) %>">
  </div>

  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @discussion.try(:title) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create discussion
  </button>
</form>

<hr>

<a href="/guides/<%= params.fetch("guide_id")%>">
  Go back
</a>
