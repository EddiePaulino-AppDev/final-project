<!-- Validation failure messages -->
<% if @tab.present? %>
  <% if @tab.errors.any? %>
    <% @tab.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new tab
</h1>

<hr>

<form action="/create_tab" method="post">
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Tab Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @tab.try(:title) %>">
  </div>




  <!--input for guide_id -->
  <div class="form-group">

    <input type="hidden" id="guide_id" name="guide_id" class="form-control" value="<%= params.fetch("guide_id") %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create tab
  </button>
</form>

<hr>

<a href="/tabs">
  Go back
</a>
