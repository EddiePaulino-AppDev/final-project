<!-- Validation failure messages -->
<% if @tab.present? %>
  <% if @tab.errors.any? %>
    <% @tab.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new tab
</h1>

<hr>

<form action="/create_tab" method="post">
  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @tab.try(:title) %>">
  </div>

  <!-- Label and input for num_of_tabs -->
  <div class="form-group">
    <label for="num_of_tabs">
      Num of tabs
    </label>

    <input type="text" id="num_of_tabs" name="num_of_tabs" class="form-control" value="<%= @tab.try(:num_of_tabs) %>">
  </div>

  <!-- Label and input for tab_id -->
  <div class="form-group">
    <label for="topic_id">
      Topic
    </label>

    <input type="text" id="topic_id" name="topic_id" class="form-control" value="<%= @tab.try(:topic_id) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create tab
  </button>
</form>

<hr>

<a href="/tabs">
  Go back
</a>
