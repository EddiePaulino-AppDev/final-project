<!-- Validation failure messages -->
<% if @section.present? %>
  <% if @section.errors.any? %>
    <% @section.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new section
</h1>

<hr>

<form action="/create_section" method="post">
  <!-- Label and input for topic_id -->
  <div class="form-group">

    <input type="hidden" id="tab_id" name="tab_id" class="form-control" value="<%= params.fetch("tab_id") %>">
    <input type="hidden" id="topic_id" name="topic_id" class="form-control" value="<%= params.fetch("topic_id") %>">

  </div>
  <div class="form-group">
    <label for="section_title">
      Section title
    </label>

    <input type="string" id="section_title" name="section_title" class="form-control" value="<%= @section.try(:title) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary" type="submit">
    Create section
  </button>
</form>

<hr>

<a href="/sections">
  Go back
</a>
