<!-- Validation failure messages -->
<% if @section.errors.any? %>
  <% @section.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit section #<%= @section.id %>
</h1>

<hr>

<form action="/update_section/<%= @section.id %>" method="post">
  <!-- Label and input for topic_id -->
  <div class="form-group">
    <label for="topic_id">
      Topic
    </label>

    <input type="text" id="topic_id" name="topic_id" class="form-control" value="<%= @section.topic_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update section
  </button>
</form>

<hr>

<a href="/sections">
  Go back
</a>
