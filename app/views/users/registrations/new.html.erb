<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>

        <% form_html_options = { novalidate: true, class: "mb-3" } %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>
          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <!-- Devise Input for first name start -->
                    <div class="form-group">
            <% first_name_was_invalid = resource.errors.include?(:first_name) %>

            <% first_name_class = "form-control" %>

            <% if was_validated %>
              <% if first_name_was_invalid %>
                <% first_name_class << " is-invalid" %>
              <% else %>
                <% first_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :first_name %>

            <%= f.text_field :first_name, :class => first_name_class, :placeholder => "Enter first name" %>

            <% if first_name_was_invalid %>
              <% resource.errors.full_messages_for(:first_name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for first name end -->
          
          <!-- Devise Input for middle initial start -->
                    <div class="form-group">
            <% middle_initial_was_invalid = resource.errors.include?(:middle_initial) %>

            <% middle_initial_class = "form-control" %>

            <% if was_validated %>
              <% if middle_initial_was_invalid %>
                <% middle_initial_class << " is-invalid" %>
              <% else %>
                <% middle_initial_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :middle_initial, "Middle initial (optional)" %>

            <%= f.text_field :middle_initial, :class => middle_initial_class, :placeholder => "Enter middle initial" %>

            <% if middle_initial_was_invalid %>
              <% resource.errors.full_messages_for(:middle_initial).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for middle initial end -->
          
          <!-- Devise Input for last name start -->
                    <div class="form-group">
            <% last_name_was_invalid = resource.errors.include?(:last_name) %>

            <% last_name_class = "form-control" %>

            <% if was_validated %>
              <% if last_name_was_invalid %>
                <% last_name_class << " is-invalid" %>
              <% else %>
                <% last_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :last_name %>

            <%= f.text_field :last_name, :class => last_name_class, :placeholder => "Enter last name" %>

            <% if last_name_was_invalid %>
              <% resource.errors.full_messages_for(:last_name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for last name end -->
          
          <!-- Devise Input for company start -->
          <div class="form-group">
            <% company_was_invalid = resource.errors.include?(:company) %>

            <% company_class = "form-control" %>

            <% if was_validated %>
              <% if company_was_invalid %>
                <% company_class << " is-invalid" %>
              <% else %>
                <% company_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :company, "Company (optional)" %>

            <%= f.text_field :company, :class => company_class, :placeholder => "Enter company" %>

            <% if company_was_invalid %>
              <% resource.errors.full_messages_for(:company).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for company end -->
          
          <!-- Devise Input for title start -->
          <div class="form-group">
            <% title_was_invalid = resource.errors.include?(:title) %>

            <% title_class = "form-control" %>

            <% if was_validated %>
              <% if title_was_invalid %>
                <% title_class << " is-invalid" %>
              <% else %>
                <% title_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :title, "Title (optional)" %>

            <%= f.text_field :title, :class => title_class, :placeholder => "Enter title" %>

            <% if title_was_invalid %>
              <% resource.errors.full_messages_for(:title).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for title end -->
          
          
          <%= f.button class: "btn btn-outline-primary btn-block" %>

          <hr>

          <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
