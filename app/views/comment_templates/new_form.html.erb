<!-- Validation failure messages -->
<% if @comment.present? %>
  <% if @comment.errors.any? %>
    <% @comment.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new comment
</h1>

<hr>

<form action="/create_comment" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @comment.try(:user_id) %>">
  </div>

  <!-- Label and input for discussion_id -->
  <div class="form-group">
    <label for="discussion_id">
      Discussion
    </label>

    <input type="text" id="discussion_id" name="discussion_id" class="form-control" value="<%= @comment.try(:discussion_id) %>">
  </div>

  <!-- Label and input for body -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <textarea id="body" name="body" class="form-control" rows="3"><%= @comment.try(:body) %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>

<hr>

<a href="/guides/<%= params.fetch("guide_id")%>">
  Go back
</a>
