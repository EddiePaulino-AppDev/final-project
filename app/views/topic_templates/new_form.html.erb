<!-- Validation failure messages -->
<% if @topic.present? %>
  <% if @topic.errors.any? %>
    <% @topic.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new topic
</h1>

<hr>

<form action="/create_topic" method="post">
  <!-- Label and input for csi_section -->
  <div class="form-group">
    <label for="csi_section">
      Csi section
    </label>

    <input type="text" id="csi_section" name="csi_section" class="form-control" value="<%= @topic.try(:csi_section) %>">
  </div>

  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @topic.try(:title) %>">
  </div>

  <!-- Label and input for engineering_discipline -->
  <div class="form-group">
    <label for="engineering_discipline">
      Engineering discipline
    </label>

    <input type="text" id="engineering_discipline" name="engineering_discipline" class="form-control" value="<%= @topic.try(:engineering_discipline) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create topic
  </button>
</form>

<hr>

<a href="/topics">
  Go back
</a>
